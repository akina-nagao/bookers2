<h1>Book detail</h1>
  <div>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to ("/books") do %>
              <%= image_tag @book.get_profile_image %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td>
              <%= @book.body %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book.id) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>